#!/bin/sh

if ! xrandr --output DP-0 --mode 3840x2160 --pos 0x0 --rotate normal --output DP-1 --off --output HDMI-0 --off --output DP-2 --off --output None-2-1 --off --output eDP-1-1 --off --output DP-1-1 --primary --mode 3840x2160 --pos 3840x0 --rotate normal --output DP-1-2 --off --output DP-1-3 --off --output DP-1-4 --off ; then {
	CONNECTED_MONITORS="$(xrandr | grep ' connected ' | sed s/\ connected\ .*//g)"
	
	for MONITOR in $CONNECTED_MONITORS ; do 
	    xrandr --output "$MONITOR" --auto
	done
} fi

xbacklight -set 25
