font = "monospace"
font-size = 16
font-features = ""
font-variations = ""
hint-font = true
text-color = {{foreground}}

prompt-color = {{foreground}}
prompt-background = {{background}}
prompt-background-padding = 0
prompt-background-corner-radius = 0

placeholder-color = {{color8 | hexa}}
placeholder-background = {{background | hexa}}
placeholder-background-padding = 0
placeholder-background-corner-radius = 0

input-background = {{background | hexa}}
input-background-padding = 0
input-background-corner-radius = 0

default-result-color = {{color1}}
default-result-background = {{background | hexa}}
default-result-background-padding = 0
default-result-background-corner-radius = 0
alternate-result-color = {{color2}}
alternate-result-background = {{background | hexa}}
alternate-result-background-padding = 0
alternate-result-background-corner-radius = 0

selection-color = {{color8}}
selection-background = {{background | hexa}}
selection-background-padding = 0
selection-background-corner-radius = 0
selection-match-color = {{background | hexa}}

text-cursor-style = bar
text-cursor-color = {{foreground}}
text-cursor-background = {{background | hexa}}
text-cursor-corner-radius = 0
text-cursor-thickness = 2

prompt-text = ": "
prompt-padding = 0
placeholder-text = "... "
num-results = 0
result-spacing = 0
horizontal = false
min-input-width = 0

width = 100%
height = 100%
background-color = {{background | hexa}}
outline-width = 0
outline-color = {{background}}
border-width = 0
border-color = {{background}}
corner-radius = 0
padding-top = 33%
padding-bottom = 33%
padding-left = 33%
padding-right = 33%
clip-to-padding = true
scale = true

anchor = center
exclusive-zone = -1
margin-top = 0
margin-bottom = 0
margin-left = 0
margin-right = 0
hide-cursor = false
text-cursor = true
history = true
# history-file = /path/to/histfile
matching-algorithm = fuzzy
require-match = true
auto-accept-single = false
hide-input = false
hidden-character = "*"
physical-keybindings = true
print-index = false
drun-launch = false
