[user]
	name = Alex Rizzoni
	email = rizzoni.alex@gmail.com
	username = air
[init]
	defaultBranch = main
[color]
	ui = true
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
	untracked = red
[web]
        browser = firefox
[diff]
        tool = nvimdiff
[difftool]
        prompt = false
[gitflow "prefix"]
        versiontag = V
[credential]
	helper = store
